{
  "extends": "./tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["src/test", "src/**/*.test.ts", "src/**/__snapshots__"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist/esm",
    "rootDir": "src", // To avoid inadvertently changing the directory structure under dist/.
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}

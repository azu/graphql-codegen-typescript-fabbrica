{
  "name": "@mizdra/graphql-fabbrica",
  "description": "GraphQL Code Generator Plugin to define mock data factory.",
  "version": "0.1.0",
  "type": "commonjs",
  "sideEffects": false,
  "repository": "https://github.com/mizdra/graphql-fabbrica.git",
  "author": "mizdra <pp.mizdra@gmail.com>",
  "license": "MIT",
  "private": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./helper": {
      "types": "./dist/helper/index.d.ts",
      "default": "./dist/helper/index.js"
    }
  },
  "workspaces": [
    "e2e"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "run-s -c lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "test": "vitest",
    "pree2e": "npm run build",
    "e2e": "npm -w e2e run start"
  },
  "prettier": "@mizdra/prettier-config-mizdra",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/plugin-helpers": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@mizdra/eslint-config-mizdra": "^2.0.0",
    "@mizdra/prettier-config-mizdra": "^1.0.0",
    "@tsconfig/node18": "^18.2.0",
    "@tsconfig/strictest": "^2.0.1",
    "@types/eslint": "^8.44.2",
    "@types/node": "^20.5.1",
    "eslint": "^8.47.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "overrides": {
    "tsconfig-paths": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "testing",
    "mock",
    "graphql",
    "graphql-code-generator"
  ],
  "files": [
    "src",
    "!src/test",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__",
    "dist"
  ],
  "peerDependencies": {
    "graphql": "^16.0.0"
  }
}
